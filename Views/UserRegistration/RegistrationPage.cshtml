@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model SimpleRegistrationProject.Models.UserRegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Registration</title>
    <link href="~/css/style.css" rel="stylesheet"/>
</head>
<body>
<div>
    <h1 class="page-title">Registration Form</h1>
    <div class="reg-form">
        @using (Html.BeginForm())
        {
            <p>Name: @Html.TextBoxFor(x => x.Name)</p>
            <p>Mail: @Html.TextBoxFor(x => x.Mail)</p>
            <p>Password: @Html.PasswordFor(x => x.Password)</p>
            <p>Confirm Password: @Html.PasswordFor(x => x.ConfirmPassrord)</p>
            <p>Age: @Html.TextBoxFor(x => x.Age)</p>
            @:Do you agree with the terms @Html.CheckBoxFor(x => x.IsAgree)
            <p><input type="submit" asp-controller="UserRegistration" asp-action="Registration"/></p>
        }
    </div>
</div>
</body>
</html>