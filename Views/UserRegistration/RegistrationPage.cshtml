@model UserRegistrationModel

<!DOCTYPE html>

<html>
<head>
    <title>Registration</title>
</head>
<body>
<div>
    <h1 class="page-title">Registration Form</h1>
    <div class="reg-form">
        <form asp-controller="UserRegistration" asp-action="Registration" method="post">
            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input asp-for="Name"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail"></label><br />
                <input asp-for="Mail"/>
                <span asp-validation-for="Mail"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label><br />
                <input asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label><br />
                <input asp-for="Age"/>
                <span asp-validation-for="Age"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAgree"></label><br />
                <input asp-for="IsAgree"/>
                <span asp-validation-for="IsAgree"></span>
            </div>
            <input type="submit" value="Registration"/>
        </form>
    </div>
</div>
</body>
</html>